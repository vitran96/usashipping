{
    "compilerOptions": {
        "target": "ES5",
        "lib": [ "ES5", "DOM" ],
        "sourceMap": true,
        "types": [ "cypress", "node"],
        "module": "commonjs",
        "moduleResolution": "node",
        // "outDir": "./dist",
        // "rootDir": "./src",
        "rootDir": "./cypress",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "preserveValueImports": false
    },
    "include": [
        // "src/**/*",
        "cypress/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}